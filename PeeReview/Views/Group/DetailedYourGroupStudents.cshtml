  </head>
  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-secondary">
        
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                
            
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img class="pp" src="img/3lines.png" alt="resme alternatif yazı" width="20" height="20"></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownId">
                        <a class="dropdown-item" href="Profile ">My Profile</a>
                        <a class="dropdown-item" href="CoursesStudent">My Courses</a>
                        <a class="dropdown-item" href="#">My Assignments</a>
                        <a class="dropdown-item" href="#">My Group</a>
                        <a class="dropdown-item" href="#">My Grades</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Sign Out</a>
                        
  
                    </div>
                </li>

                <li class="nav-item active">
                  <a class="nav-link" href="#">Home<span class="sr-only">(current)</span></a>
              </li>

              <li class="nav-item active">
                <a class="nav-link" href="#">Notifications<span class="sr-only">(current)</span></a>
            </li>

            
                

            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <a class="your-group"><b>Your Group</b></a><br />
    <hr class="line" width="1300" height="100"/>
    
    <form class="all_items" name="form" >
        <center><img class="pin1" src="img/pin.png" alt="resme alternatif yazı" width="20" height="20"></center>
        <a class="github-link" href="#">Githublink</a>
        <center><img class="pin2" src="img/pin.png" alt="resme alternatif yazı" width="20" height="20"></center>

        <div class="readme">
            <button class="btn1 btn-secondary dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                        Readme
                    </button>
            <div class="dropdown-menu" aria-labelledby="triggerId">
                <a class="dropdown-item" href="#">Readme</a>
            </div>
        </div>
        <div class="members">
            <button class="btn2 btn-secondary dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                        Members
                    </button>
            <div class="dropdown-menu" aria-labelledby="triggerId">
                @if (group.students.Count > 0)
                {
                    foreach (Student student in group.students)
                    {
                        <a class="dropdown-item" href="#">@student.Name</a>
                    }
                }
                else
                {
                    
                }
            </div>
        </div>
        <div class="past-assignments">
            <button class="btn3 btn-secondary dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                        Past Assignments
                    </button>
            <div class="dropdown-menu" aria-labelledby="triggerId">
                @if (group.assignments.Count > 0)
                {
                    foreach (Assignment assignment in group.assignments)
                    {
                        <a class="dropdown-item" href="../Assignment/GroupAssignmentsStudent">@assignment.title</a>
                     }
                       }
                    else
                {
                                    
                }

            </div>
        </div>
        <div class="grades">
            <button class="btn4 btn-secondary dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                        Evaluations
                    </button>
            <div class="dropdown-menu" aria-labelledby="triggerId">
                 @if (group.groupAverageEvals.Count > 0)
                                {
                                    foreach (KeyValuePair<string, double> dic in group.groupAverageEvals)
                                    {
                                        <a class="dropdown-item" href="../Evaluate/EvaluateTeamMembers">@dic.Value</a>
                                     }
                                       }
                                    else
                                {
                                                    
                                }

            </div>
        </div>
        <div class="evaluations">
            <button class="btn5 btn-secondary dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                        Grades
                    </button>
            <div class="dropdown-menu" aria-labelledby="triggerId">
                @if (group.assignments.Count > 0)
                         {
                                  foreach (Assignment assignment in group.assignments)
                                  {
                                       <a class="dropdown-item" href="#">@assignment.grade</a>
                                       }
                                        }
                                             else{}
                                    
                                                      

            </div>
        </div>
        <a href="#" class="exit-btn" role="button"><Center>Exit Group</Center></a>
    </form>
    <a class="chemistry-text"><b>Chemistry of the group is perfect!</b></a><br />

    



    <style>
        .chemistry-text{
            font-size: 20px;
            position:absolute;
            top:4cm;
            left:23cm;
        }
        .your-group{
        font-size: 30px;
        position:absolute;
        top:2cm;
        left:2cm;
        }
        .line{
        position:absolute;
        top:3cm;
        left:2cm;
      }
      .all_items{
          position:absolute;
          top:4cm;
          left:2cm;
      }
      .github-link{
          position:absolute;
          top:0cm;
          left:1cm;
          color:black;
      }
      .pin2{
          position:absolute;
          top:1.3cm;
          left:0cm;
      }
      .readme{
          position:absolute;
          top:1cm;
          left:1cm;
      }
      .members{
          position:absolute;
          top:2.5cm;
          left:1cm;
      }
      .past-assignments{
          position:absolute;
          top:4cm;
          left:1cm;
          width:500px;
      }
      .grades{
